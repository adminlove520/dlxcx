<i-row style="width:100%;">

<i-col bindtap="toDetail" data-gid="{{item.id}}" wx:for="{{good}}" i-class="col-class" span="12" >

<image    class="cover" src="{{item.urls[0]}}"></image>
<!-- <text class="name">dfnlkgnfdlkngkdnfglndlkg</text> -->
<text class="name">{{item.name}}</text>
<text class="price">￥{{item.unitprice}}</text>
<view class="bt" bindtap="addToCart" data-index="{{index}}"><i-icon  type="add" size="30"/></view>

</i-col>


</i-row>


