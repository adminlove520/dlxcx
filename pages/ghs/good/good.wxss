/* pages/ghs/good/good.wxss */

.box{
	position:relative;
	min-height:100vh;
	padding-bottom:20px;
}

.col-class{
	padding:2px;
	margin-bottom: 10rpx;
	height:550rpx;
	
	box-shadow: 1px 1px 6px gray;

}
.cover{
	width:100%;
	height:400rpx;
	
	
}

.name{
	display:inline-block;
	width:100%;
	height:50rpx;
	line-height: 50rpx;
	/*border:1px solid green;*/
	overflow:hidden;
	text-overflow:ellipsis;
}

.price{
	float:left;
	display:inline-block;
	width:70%;
	line-height:70rpx;
}

.bt{
	float:right;
	display:inline-block;
	width:70rpx;
	height:70rpx;
	text-align:right;
	border-radius:50%;
	background-color:red;
}

.cart{
	display:block;
	position:fixed;
	bottom:0;
	width:100vw;
	height:50rpx;
	border:1px solid red;
	background-color:#fff;
}